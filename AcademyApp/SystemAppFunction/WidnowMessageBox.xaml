<Window x:Class="AcademyApp.SystemAppFunction.WidnowMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyApp.SystemAppFunction"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Окно ошибки" Height="250" Width="350">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Текст ошибки" 
                       Name="TxtMessage"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <Button Content="OK"
                    FontSize="12pt"
                    FontWeight="Bold"
                    Style="{StaticResource BtnRegistration}"/>
        </StackPanel>
    </Grid>
</Window>
